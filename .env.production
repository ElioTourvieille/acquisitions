# Production Environment Configuration
# This configuration uses Neon Cloud database directly

# Server Config
PORT=3000
NODE_ENV=production
LOG_LEVEL=info

# Database Config - Neon Cloud
# This should be your actual Neon Cloud database URL
# Format: postgres://[user]:[password]@[endpoint]/[dbname]?sslmode=require
DATABASE_URL=your_neon_cloud_database_url_here

# Arcjet Configuration
ARCJET_KEY=your_production_arcjet_key_here
ARCJET_ENV=production

# JWT Configuration
JWT_SECRET=your_production_jwt_secret_here

# Additional Production Settings
CORS_ORIGIN=https://yourdomain.com